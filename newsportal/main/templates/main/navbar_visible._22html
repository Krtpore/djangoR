
{% load static %}
{% load bootstrap5 %}

{% bootstrap_css %}
{% bootstrap_javascript %}


<link rel="stylesheet" href="{% static 'main/css/style.css' %}" />

<script src="https://kit.fontawesome.com/a97047fead.js" crossorigin="anonymous"></script>

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" >
<!--скрипты ниже для работы выпадающего меню пользователя-->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>



<div class="navbar">
    <div class="row">
        <div class="row wraptocenter">
            <div class="col-3 col-sm-4 col-md-4 col-lg-3">
                <img src="{% static 'main/img/site-logo.png' %}" alt="Иконка меню" style="width:auto;height:55px">
            </div>
            <div class="col-9 col-sm-8 col-md-8 col-lg-9">
                <div class="d-none d-xl-block">
                    <span class="content-to-hide"><h4> Меню сайта </h4></span><br>
                </div>
            </div>
        </div>
        <div class="row">
            <ul>
                <div class="row">
                    <ul class="navbar_ul">
                        <a href="{% url 'main' %}" class="btn btn-light"> <img src="{% static 'main/img/icon-home.png' %}" class="navbaricons" alt="Иконка домашней страницы" style="text-align: center;"> 
                            <span class="content-to-hide">Домашняя страница</span>
                        </a>
                    </ul>
                    </a>
                    <ul class="navbar_ul">
                        <a href="{% url 'news' %}" class="btn btn-light"> <img src="{% static 'main/img/icon-news-reader.png' %}" alt="Иконка просмотра новостей" class="navbaricons" style="text-align: center;">
                        <span class="content-to-hide">Все новости</span></a>
                    </ul>
                    <ul class="navbar_ul"> 
                        <a href="{% url 'create_article' %}" class="btn btn-light"> <img src="{% static 'main/img/icon-create-article.png' %}" alt="Иконка создания новости" class="navbaricons" style="text-align: center;">
                        <span class="content-to-hide">Предложить новость</span></a>
                    </ul>
                    <ul class="navbar_ul"> 
                        <a href="{% url 'user' %}" class="btn btn-light"> <img src="{% static 'main/img/avatar.png' %}" alt="Иконка пользователя" class="navbaricons" style="text-align: center;">
                        <span class="content-to-hide">Страница пользователя</span></a>
                    </ul id="navbar_ul">
                    <ul class="navbar_ul"> 
                        <a href="{% url 'about' %}" class="btn btn-light"> <img src="{% static 'main/img/icon-about-us.png' %}" alt="Иконка просмотра новостей" class="navbaricons" style="text-align: center;"> 
                            <span class="content-to-hide">О нас</span></a>
                    </ul id="navbar_ul">
                    <ul class="navbar_ul"> 
                        <a href="{% url 'contact_page' %}" class="btn btn-light"> <img src="{% static 'main/img/icon-send-mail.png' %}" alt="Иконка пользователя" class="navbaricons" style="text-align: center;">
                            <span class="content-to-hide">Написать нам</span></a>
                    </ul>
                <ul>
                    <div class="input-group rounded">
                        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                        <span class="input-group-text border-0" id="search-addon">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                </ul>
            </ul>
        </div>
    </div>
</div>